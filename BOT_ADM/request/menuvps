#! /bin/bash


#PRUEBA
ABOUTME=`curl -s "https://api.telegram.org/bot(token)/getUpdates"`
if [[ "$ABOUTME" =~ \"ok\"\:true\, ]]; then
        if [[ "$ABOUTME" =~ \"username\"\:\"([^\"]+)\" ]]; then
                MYUSERNAME=${BASH_REMATCH[1]}

        fi

        if [[ "$ABOUTME" =~ \"first_name\"\:\"([^\"]+)\" ]]; then
                MYFIRSTNAME=${BASH_REMATCH[1]}

        fi

        if [[ "$ABOUTME" =~ \"id\"\:([0-9\-]+), ]]; then

                BOTID=${BASH_REMATCH[1]};
        fi

else
        echo "Error: maybe wrong token... exit.";
        exit;
fi

udp()
{
a="$(systemctl is-active udp-custom)"

case $a  in

active) echo  "UDP-STATUS:[ON]"|lolcat
;;
inactive)echo "UDP-STATUS:[OFF]"|lolcat
;;
esac
}

statusbadvpn()
{
on="\033[1;32m[ON]" && off="\033[1;31m[OFF]"
[[ $(ps x | grep badvpn | grep -v grep | awk '{print $1}') ]] && badvpn=$on || badvpn=$off
echo -e "\e[1;31mBADVPN:\e[0m" "$badvpn"|lolcat

}



#COMANDOS

SSH="$(grep -c ".*" /etc/usuarios)"
status="$(systemctl is-active apache2)"
ID="$BOTID"
Usuario="$MYUSERNAME"
Nombre="$MYFIRSTNAME"
udp="$(udp)"
statusbadvpn="$(statusbadvpn)
(echo "
ЁЭЩ▒ЁЭЪТЁЭЪОЁЭЪЧЁЭЪЯЁЭЪОЁЭЪЧЁЭЪТЁЭЪНЁЭЪШ ! $Nombre

Tu Usuario: @$Usuario

Tu ID: $ID

======ЁЯЪл Tus comandos Disponibles [VPS-MOD]=========
Status Generador [VPS-MOD]: [$status]
 SSH Generadas [$SSH]
 $udp
 $statusbadvpn
 тАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАв
/onudp тЭИ Activar UDP [VPS-MOD] |
/offudp тЭИ Apagar UDP [VPS-MOD] |
/onbad  тЭИActivar BADVPN  [VPS-MOD] |
/offbad  тЭИApagar BADVPN  [VPS-MOD] |
/onpsi тЭИ Activar Psiphon [VPS-MOD] |
/datpsi тЭИDatos Psiphon  [VPS-MOD] |
/ssh  тЭИ Crear Cuenta SSH[VPS-MOD] |
/infssh тЭИVer Cuentas SSH  [VPS-MOD] |
/exit тЭИ Salir del Bot |
 тАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАв")
