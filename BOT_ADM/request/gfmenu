#! /bin/bash


#PRUEBA
ABOUTME=`curl -s "https://api.telegram.org/bot/getUpdates"`
if [[ "$ABOUTME" =~ \"ok\"\:true\, ]]; then
        if [[ "$ABOUTME" =~ \"username\"\:\"([^\"]+)\" ]]; then
                MYUSERNAME=${BASH_REMATCH[1]}
                
        fi

        if [[ "$ABOUTME" =~ \"first_name\"\:\"([^\"]+)\" ]]; then
                MYFIRSTNAME=${BASH_REMATCH[1]}
                
        fi

        if [[ "$ABOUTME" =~ \"id\"\:([0-9\-]+), ]]; then
                
                BOTID=${BASH_REMATCH[1]};
        fi

else
        echo "Error: maybe wrong token... exit.";
        exit;
fi




#COMANDOS

status="$(php /var/www/html/status)"
ID="$BOTID"
Usuario="$MYUSERNAME"
Nombre="$MYFIRSTNAME"

(echo "
ЁЭЩ▒ЁЭЪТЁЭЪОЁЭЪЧЁЭЪЯЁЭЪОЁЭЪЧЁЭЪТЁЭЪНЁЭЪШ ! $Nombre

Tu Usuario: @$Usuario

Tu ID: $ID

======ЁЯЪл Tus comandos Disponibles=========
Status Server [GRAND-FANTASIA]: [$status]
 тАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАв
/start тЭИ INICIAR  SERVIDOR  GF|
/stop тЭИ PARAR SERVIDOR GF |
/restart тЭИ RESETEAR SERVIDOR GF |
/clear  тЭИ BORRAR CACHE DEL SERVIDOR [GF-SERVER] |
/menu тЭИ Ver el menu nuevamente[GF-SERVER] |
/exit тЭИ Salir del Bot |
 тАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАвтАв")
